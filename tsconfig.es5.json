{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "declaration": true,
    "outDir": "./dist/es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
      "src/**/*.test.ts",
      "**/node_modules",
      "lib"
  ]
}
