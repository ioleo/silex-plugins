{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "lib": [
            "es5"
        ],
        "strict": false,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "declaration": true,
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "src/**/*.test.ts",
        "**/node_modules",
        "lib"
    ]
}
